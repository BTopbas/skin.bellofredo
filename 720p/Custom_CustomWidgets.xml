       <control type="image">
         <left>311</left>
         <top>226</top>
         <width>658</width>
         <height>57</height>
         <colordiffuse>blue</colordiffuse>
         <texture background="true" border="9">dialogs/other/header.png</texture>
       </control>
       <control type="image">
         <left>311</left>
         <top>280</top>
         <width>658</width>
         <height>238</height>
         <texture background="true" border="39,19,39,19">dialogs/other/body.png</texture>
       </control>
       <control type="image">
         <left>313</left>
         <top>279</top>
         <width>654</width>
         <height>4</height>
