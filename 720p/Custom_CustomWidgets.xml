       <posx>328</posx>
       <posy>247</posy>
       <width>170</width>
       <height>200</height>
       <itemgap>4</itemgap>
       <onleft>10000</onleft>
       <onright>6000</onright>
       <onup>5000</onup>
       <ondown>5000</ondown>
       <control type="button" id="5001">
        <description>Custom Item 1</description>
        <width>170</width>
        <include>DialogsButton</include>
        <label>$LOCALIZE[31378] 1</label>
        <onfocus>SetProperty(EditCustomWidgets,widgetgroup1,SkinSettings)</onfocus>
      </control>
      <control type="button" id="5002">
        <description>Custom Item 2</description>
        <width>170</width>
        <include>DialogsButton</include>
        <label>$LOCALIZE[31378] 2</label>
        <onfocus>SetProperty(EditCustomWidgets,widgetgroup2,SkinSettings)</onfocus>
      </control>
      <control type="button" id="5003">
        <description>Custom Item 3</description>
        <width>170</width>
        <include>DialogsButton</include>
        <label>$LOCALIZE[31378] 3</label>
        <onfocus>SetProperty(EditCustomWidgets,widgetgroup3,SkinSettings)</onfocus>
      </control>
      <control type="button" id="5004">
        <description>Custom Item 4</description>
        <width>170</width>
        <include>DialogsButton</include>
        <label>$LOCALIZE[31378] 4</label>
        <onfocus>SetProperty(EditCustomWidgets,widgetgroup4,SkinSettings)</onfocus>
      </control>
    </control>

    <control type="grouplist" id="6000">
     <posx>502</posx>
     <posy>297</posy>
     <width>450</width>
     <height>149</height>
     <itemgap>4</itemgap>
     <onleft>5000</onleft>
     <onright>10000</onright>
     <onup>6000</onup>
     <ondown>6000</ondown>
     <scrolltime>250</scrolltime>
     <control type="button" id="4101">
      <description>Edit Label</description>
      <width>450</width>
      <include>DialogsButton</include>
      <label>Label $VAR[CustomWidgetNumber]</label>
      <label2>[COLOR=selected]$VAR[CustomWidgetLabel][/COLOR]</label2>
      <onclick>Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Label)</onclick>
    </control>
    <control type="button" id="4102">
      <description>edit Thumb</description>
      <width>450</width>
      <include>DialogsButton</include>
      <label>Layout $VAR[CustomWidgetNumber]</label>
      <label2>[COLOR=selected]$VAR[CustomWidgetLayout][/COLOR]</label2>
      <onclick>SetProperty(Dialog.1.Label,Poster)</onclick>
      <onclick>SetProperty(Dialog.1.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Layout,Poster))</onclick>
      <onclick>SetProperty(Dialog.2.Label,Square)</onclick>
      <onclick>SetProperty(Dialog.2.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Layout,Square))</onclick>    
      <onclick>RunScript(script.toolbox,info=selectdialog,header=Layout)</onclick>
    </control>
    <control type="button" id="4103">
      <description>edit target</description>
      <width>450</width>
      <include>DialogsButton</include>
      <label>Target $VAR[CustomWidgetNumber]</label>
      <label2>[COLOR=selected]$VAR[CustomWidgetTarget][/COLOR]</label2>
      <onclick>SetProperty(Dialog.1.Label,Videos)</onclick>
      <onclick>SetProperty(Dialog.1.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Target,video))</onclick>
      <onclick>SetProperty(Dialog.2.Label,Music)</onclick>
      <onclick>SetProperty(Dialog.2.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Target,music))</onclick>    
      <onclick>SetProperty(Dialog.3.Label,Pictures)</onclick>
      <onclick>SetProperty(Dialog.3.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Target,pictures))</onclick>  
      <onclick>SetProperty(Dialog.4.Label,Programs)</onclick>
      <onclick>SetProperty(Dialog.4.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Target,programs))</onclick>   
      <onclick>SetProperty(Dialog.5.Label,Other)</onclick>
      <onclick>SetProperty(Dialog.5.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Target,other))</onclick>    
      <onclick>RunScript(script.toolbox,info=selectdialog,header=Target)</onclick>
    </control>
    <control type="button" id="4104">
      <description>edit source</description>
      <width>450</width>
      <include>DialogsButton</include>
      <label>$LOCALIZE[21899] $VAR[CustomWidgetNumber]</label>
      <label2>[COLOR=selected]$VAR[CustomWidgetSource][/COLOR]</label2>
      <onclick>SetProperty(Dialog.1.Label,$LOCALIZE[31323])</onclick>
      <onclick>SetProperty(Dialog.1.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,mixed)||RunScript(script.skinshortcuts,type=manage&amp;nolabels=True&amp;group=widgetgroup1))</onclick>
      <onclick>SetProperty(Dialog.2.Label,$LOCALIZE[31324])</onclick>
      <onclick>SetProperty(Dialog.2.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,pathvideos)||RunScript(script.favourites,property=CustomWidgetPath1))</onclick>
      <onclick>SetProperty(Dialog.3.Label,$LOCALIZE[31325])</onclick>
      <onclick>SetProperty(Dialog.3.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,pathmusic)||RunScript(script.favourites,property=CustomWidgetPath1))</onclick>
      <onclick>SetProperty(Dialog.4.Label,$LOCALIZE[31326])</onclick>
      <onclick>SetProperty(Dialog.4.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,pathpictures)||RunScript(script.favourites,property=CustomWidgetPath1))</onclick>
      <onclick>SetProperty(Dialog.5.Label,$LOCALIZE[31327])</onclick>
      <onclick>SetProperty(Dialog.5.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,pathother)||RunScript(script.favourites,property=CustomWidgetPath1))</onclick>
      <onclick>SetProperty(Dialog.6.Label,$LOCALIZE[31328])</onclick>
      <onclick>SetProperty(Dialog.6.BuiltIn,Skin.SetString(widgetgroup.$VAR[CustomWidgetNumber].Source,pathown)||Skin.SetString(CustomWidgetPath1.List))</onclick>
      <onclick>RunScript(script.toolbox,info=selectdialog,header=$LOCALIZE[31322])</onclick>
    </control>
  </control>
</control>
